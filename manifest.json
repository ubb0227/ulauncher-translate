{
  "required_api_version": "^2.0.0",
  "name": "DeepL Translator",
  "description": "翻譯文字使用 DeepL API (Free)",
  "developer_name": "你的名字",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 0.3
  },
  "preferences": [
    {
      "id": "translate",
      "type": "keyword",
      "name": "翻譯關鍵字",
      "description": "輸入文字以翻譯",
      "default_value": "tr"
    },
    {
      "id": "mainlang",
      "type": "text",
      "name": "預設目標語言",
      "description": "DeepL 語言代碼，例如 EN、ZH、JA",
      "default_value": "EN"
    },
    {
      "id": "otherlang",
      "type": "text",
      "name": "預設來源語言",
      "description": "來源語言代碼，例如 ZH、DE（留空代表自動偵測）",
      "default_value": ""
    },
    {
      "id": "wrap",
      "type": "text",
      "name": "換行寬度",
      "description": "每行最大字元數（例如 80）",
      "default_value": "80"
    }
  ]
}
