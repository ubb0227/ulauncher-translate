{
  "name": "DeepL Translate",
  "description": "使用 DeepL API 精準翻譯文字，支援語言參數如 zh:en 開頭切換翻譯方向。",
  "developer_name": "ubb0227",
  "icon": "images/icon.png",
  "required_api_version": "2.0.0",
  "default_keyword": "tl",
  "options": {
    "mainlang": {
      "type": "text",
      "default": "EN",
      "description": "目標語言（例如 EN, ZH, JA）"
    },
    "otherlang": {
      "type": "text",
      "default": "AUTO",
      "description": "來源語言（例如 AUTO, ZH, EN）"
    },
    "wrap": {
      "type": "text",
      "default": "80",
      "description": "每行最多字元數"
    }
  },
  "keywords": [
    "translate",
    "tl",
    "翻譯"
  ]
}
